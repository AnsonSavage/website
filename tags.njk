<h1 class="page-title">All Tags</h1>

<ul class="ul-no-style">
{%- for tag in collections.tags -%}

  <li class="list-tag">
    {% set tag_url %}/tags/{{ tag }}/{% endset %}

    <a href="{{ tag_url | url }}">
      {{- tag -}}
    </a>
  </li>

{%- endfor -%}
</ul>